<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="120dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cover_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/default_book_bg" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:background="@drawable/shape_book_cover" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cover_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/check_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:background="@drawable/ic_radio_unchecked_white" />
    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/book_name_txt"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="《斗破苍穹》"
        android:textColor="@color/black"
        android:textSize="15sp" />
</LinearLayout>